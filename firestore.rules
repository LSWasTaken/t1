rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Players collection rules
    match /players/{playerId} {
      allow read: if true;  // Anyone can read player data
      allow create: if request.auth != null;  // Only authenticated users can create
      allow update: if request.auth != null && request.auth.uid == playerId;  // Players can only update their own data
      allow delete: if false;  // No deletions allowed
    }
    
    // Matches collection rules
    match /matches/{matchId} {
      allow read: if true;  // Anyone can read match data
      allow create: if request.auth != null;  // Authenticated users can create matches
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.player1Id || request.auth.uid == resource.data.player2Id);  // Only match participants can update
      allow delete: if false;  // No deletions allowed
    }

    // Allow querying players collection
    match /players/{playerId} {
      allow list: if true;  // Allow listing all players
    }
  }
} 